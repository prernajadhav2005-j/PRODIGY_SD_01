<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">
        <TextView
            android:text="ðŸŒ¡ Temperature Converter"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Enter Temperature"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Enter value"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/ck"
                    android:text="Celsius â†’ Kelvin"
                    style="@style/ConverterButton" />

                <Button
                    android:id="@+id/cf"
                    android:text="Celsius â†’ Fahrenheit"
                    style="@style/ConverterButton" />

                <Button
                    android:id="@+id/kc"
                    android:text="Kelvin â†’ Celsius"
                    style="@style/ConverterButton" />

                <Button
                    android:id="@+id/kf"
                    android:text="Kelvin â†’ Fahrenheit"
                    style="@style/ConverterButton" />

                <Button
                    android:id="@+id/fc"
                    android:text="Fahrenheit â†’ Celsius"
                    style="@style/ConverterButton" />

                <Button
                    android:id="@+id/fk"
                    android:text="Fahrenheit â†’ Kelvin"
                    style="@style/ConverterButton" />
                <TextView
                    android:id="@+id/ans"
                    android:text="Result will show here"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
